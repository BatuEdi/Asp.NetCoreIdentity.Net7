@{
    ViewData["Title"] = "SignIn";
}

@model SignInViewModel

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-3 offset-md-4">
        <h2>Giriş Yap</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <form asp-controller="Home" asp-action="SignIn" asp-route-routeurl="@Context.Request.Query["returnURL"]" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input class="form-control" value="edisan@gmail.com" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input type="password" value="Password12*" class="form-control" asp-for="Password">
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" for="RememberMe" asp-for="RememberMe"></label>
                    </div>

                </div>
                <div class="col-md-6">
                    <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi Unuttum</a>
                </div>

            </div>

            <button type="submit" class="btn btn-primary">Giriş</button>
            <div>
            </div>
        </form>

    </div>
</div>


